<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fatec.lanchoneteapp.adapters.controller.ProdutoController">

    <top>
        <Label text="Cadastro de Produtos" style="-fx-font-size: 20px; -fx-padding: 10; -fx-font-weight: bold;" />
    </top>

    <center>
        <GridPane hgap="10" vgap="10" padding="20">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <!-- Nome -->
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <!-- Quantidade Estoque -->
            <Label text="Qtd Estoque:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="txtQtdEstoque" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <!-- Valor Unitário -->
            <Label text="Valor Unitário:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="txtValorUnit" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <!-- Categoria -->
            <Label text="Categoria:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="cbCategoria" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <!-- Botões -->
            <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Button text="Salvar" fx:id="btnSalvar" onAction="#salvar" />
                <Button text="Atualizar" fx:id="btnAtualizar" onAction="#atualizar" />
                <Button text="Excluir" fx:id="btnExcluir" onAction="#excluir" />
                <Button text="Limpar" fx:id="btnLimpar" onAction="#limpar" />
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <TableView fx:id="tabelaProdutos" prefHeight="300" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn text="ID" prefWidth="50" fx:id="colId" />
                <TableColumn text="Nome" prefWidth="150" fx:id="colNome" />
                <TableColumn text="Qtd Estoque" prefWidth="100" fx:id="colQtd" />
                <TableColumn text="Valor Unit" prefWidth="100" fx:id="colValor" />
                <TableColumn text="Categoria" prefWidth="150" fx:id="colCategoria" />
            </columns>
        </TableView>
    </bottom>

</BorderPane>