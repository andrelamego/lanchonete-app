<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fatec.lanchoneteapp.ui.ProdutoFornecedorController">
    <top>
        <Label text="Cadastro Produto Ã— Fornecedor" style="-fx-font-size: 20px; -fx-padding: 10;" />
    </top>

    <center>
        <GridPane hgap="10" vgap="10" padding="20">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <children>
                <Label text="Produto:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="cbProduto" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Fornecedor:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ComboBox fx:id="cbFornecedor" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Button text="Salvar" fx:id="btnSalvar" onAction="#salvar" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Button text="Excluir" fx:id="btnExcluir" onAction="#excluir" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <TableView fx:id="tabela" prefHeight="200" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn text="ID Produto" prefWidth="150" fx:id="colProduto" />
                <TableColumn text="ID Fornecedor" prefWidth="150" fx:id="colFornecedor" />
                <TableColumn text="Produto" prefWidth="200" fx:id="colNomeProduto" />
                <TableColumn text="Fornecedor" prefWidth="200" fx:id="colNomeFornecedor" />
            </columns>
        </TableView>
    </bottom>
</BorderPane>
